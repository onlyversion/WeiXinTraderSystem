<UserControl x:Class="Gss.PopUpWindow.AuthorityModule.SystemSettingsPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <GroupBox Margin="3">
        <GroupBox.Header>
            <CheckBox Content="系统设置" Width="Auto" IsChecked="{Binding IsSystemSettingsEnabled}"/>
        </GroupBox.Header>
        <WrapPanel>
            <CheckBox Content="发布新闻" IsChecked="{Binding AllowReleaseNews}"/>
            <CheckBox Content="发布公告" IsChecked="{Binding AllowReleaseAnnouncement}"/>
            <CheckBox Content="查看日志" IsChecked="{Binding AllowViewLog}"/>
            <CheckBox Content="节假日" IsChecked="{Binding AllowHolidaysSettings}"/>
            <CheckBox Content="交易日" IsChecked="{Binding AllowTradingDaySettings}"/>
            <CheckBox Content="交易设置" IsChecked="{Binding AllowTransactionSettings}"/>
            <CheckBox Content="IP地址过滤" IsChecked="{Binding EnableIPAddressFiltering}"/>
            <CheckBox Content="MAC地址过滤" IsChecked="{Binding EnableMACAddressFiltering}"/>
        </WrapPanel>
    </GroupBox>
</UserControl>
