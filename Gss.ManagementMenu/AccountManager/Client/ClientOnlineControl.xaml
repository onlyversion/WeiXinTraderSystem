                        <DataGridCheckBoxColumn Width="70"  Header="允许买涨" Binding="{Binding TransactionSettings.AllowOrder}"/>
                        <DataGridCheckBoxColumn Width="70"  Header="允许出金" Binding="{Binding TransactionSettings.AllowEncashment}"/>
