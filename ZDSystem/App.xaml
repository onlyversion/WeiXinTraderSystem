<Application x:Class="ZDSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnExplicitShutdown"
             Startup="Application_Startup"
             DispatcherUnhandledException="Application_DispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="CustomStyle\TabControlStyle.xaml"/>
                <ResourceDictionary Source="CustomStyle\DataGridStyle.xaml"/>
                <ResourceDictionary Source="CustomStyle\Styles.xaml"/>
                <ResourceDictionary Source="CustomStyle\ComboBoxStyle.xaml"/>
                <ResourceDictionary Source="CustomStyle\PulseButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application> 
